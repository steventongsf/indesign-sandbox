#include "XMPCore/Interfaces/IXMPPathSegment.h"
#include "XMPCore/Interfaces/IXMPDOMFactory.h"

namespace NS_XMPCORE {


	spIXMPPathSegment_latest IXMPPathSegment_v1::CreatePropertySegment( const char * nameSpace, const char * name ) {
		return IXMPDOMFactory_latest::GetInstance()->CreatePropertySegment( nameSpace, name );
	}

	spIXMPPathSegment_latest IXMPPathSegment_v1::CreateArrayIndexSegment( const char * nameSpace, size_t index ) {
		return IXMPDOMFactory_latest::GetInstance()->CreateArrayIndexSegment( nameSpace, index );
	}

	spIXMPPathSegment_latest IXMPPathSegment_v1::CreateQualifierSegment( const char * nameSpace, const char * name ) {
		return IXMPDOMFactory_latest::GetInstance()->CreateQualifierSegment( nameSpace, name );
	}

	spIXMPPathSegment_latest IXMPPathSegment_v1::CreateQualifierSelectorSegment( const char * nameSpace, const char * name, const char * value ) {
		return IXMPDOMFactory_latest::GetInstance()->CreateQualifierSelectorSegment( nameSpace, name, value );
	}

}
