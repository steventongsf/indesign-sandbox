<?xml version="1.0" encoding="utf-8"?>
<ExtensionManifest Version="2.0" ExtensionBundleId="ToolHints"
	ExtensionBundleVersion="2.0.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

  <ExtensionList>
    <Extension Id="TH" Version="2.0"/>
  </ExtensionList>
  <ExecutionEnvironment>
    <HostList>
      <Host Name="IDSN" Version="8.0"/>
      <Host Name="AICY" Version="8.0"/>
    </HostList>
    <LocaleList>
      <Locale Code="All"/>
    </LocaleList>
    <RequiredRuntimeList>
      <RequiredRuntime Name="CSXS" Version="3.0"/>
    </RequiredRuntimeList>
  </ExecutionEnvironment>
  <DispatchInfoList>
    <Extension Id="TH">
      <DispatchInfo>
        <Resources>
          <SwfPath>./Tool Hints.swf</SwfPath>
          <ScriptPath>./Tool Hints.jsx</ScriptPath>
        </Resources>
        <Lifecycle>
          <AutoVisible>true</AutoVisible>
        </Lifecycle>
        <UI>
          <Type>Panel</Type>
          <Menu Placement="'Main:&amp;Window:UtilitiesSubmenu',600,'KBSCE Tools'">%TOOLHINTSNAME</Menu>
          <Geometry>
            <Size>
              <Height>480</Height>
              <Width>212</Width>
            </Size>
            <MinSize>
              <Height>100</Height>
              <Width>212</Width>
            </MinSize>
          </Geometry>
          <Icons>
            <Icon Type="Normal">./assets/PL_Hints_N.png</Icon>
            <Icon Type="RollOver">./assets/PL_Hints_R.png</Icon>
          </Icons>
        </UI>
      </DispatchInfo>
    </Extension>
  </DispatchInfoList>
</ExtensionManifest>

